<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e6e6e6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.tutormatic.HomeActivity"
    tools:showIn="@layout/activity_home">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/teaching"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#31404f"
                android:id="@+id/relative1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textWel"
                    android:padding="5dp"
                    android:text="Providing Tutors and Students with the tools to share knowledge."
                    android:textSize="23dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
            <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_height="10dp"
                android:background="#e6e6e6">
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="22dp"
                android:text="No Commission, No Fee, Just A Free Service"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textSize="17dp"
                android:text="Tutor Matic help the Tutors and Students to connect together without any service charges"/>
            </LinearLayout>
            <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_height="10dp"
                android:background="#e6e6e6">
            </TableRow>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24/7 Access"
                    android:textSize="28dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:id="@+id/textAccess"
                    android:textColor="@color/colorAccent"
                    android:gravity="center_horizontal" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#444"
                    android:id="@+id/hrAccess"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@+id/textAccess">

                </TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textAC"
                    android:layout_below="@+id/hrAccess"
                    android:textSize="18dp"
                    android:text="Getting a Tutor/Student is easy. Get a Tutor/Student anytime, anywhere."
                    android:gravity="center" />
            </RelativeLayout>
            <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_height="10dp"
                android:background="#e6e6e6">
            </TableRow>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Best Tutors"
                    android:textSize="28dp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:id="@+id/textBest"
                    android:gravity="center_horizontal" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#444"
                    android:id="@+id/hrBT"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@+id/textBest">

                </TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textBT"
                    android:layout_below="@+id/hrBT"
                    android:textSize="17dp"
                    android:text="Tutor Matic aim is to provide the best Tutor to our Students.Our Tutor are Academicians and Professionals."
                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seeTutors"
                    android:layout_below="@+id/textBT"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:text="See Our Tutors"/>
            </RelativeLayout>
            <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_height="10dp"
                android:background="#e6e6e6">
            </TableRow>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personalized"
                    android:textSize="28dp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:id="@+id/textPer"
                    android:gravity="center_horizontal" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#444"
                    android:id="@+id/hrPer"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@+id/textPer">

                </TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textPC"
                    android:layout_below="@+id/hrPer"
                    android:textSize="17dp"
                    android:text="Every session will be personalized to your interest of studying/learning and your question."
                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seeStudents"
                    android:layout_below="@+id/textPC"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"
                    android:text="See Our Students"/>
            </RelativeLayout>
            <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_height="10dp"
                android:background="#e6e6e6">
            </TableRow>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
